<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
    <PropertyGroup>
        <AnalysisLevel>latest-All</AnalysisLevel>
        <ErrorLog>bin/codeanalysis.sarif.json</ErrorLog>
        <AnalysisLevel>preview-recommended</AnalysisLevel>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <AnalysisMode>All</AnalysisMode>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.*" />
        <PackageReference
            Include="Microsoft.Extensions.DependencyInjection.Abstractions"
            Version="8.0.*"
        />
        <PackageReference Include="MediatR" Version="12.2.*" />
        <PackageReference Include="Microsoft.IdentityModel.Tokens" Version="7.1.*" />
        <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="7.1.*" />
        <PackageReference Include="System.Linq.Async" Version="6.0.*" />
        <PackageReference Include="Casbin.NET" Version="2.16.0" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\ProjectMetadataPlatform.Domain\ProjectMetadataPlatform.Domain.csproj" />
    </ItemGroup>
</Project>
